<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.florian.tobeortohave.activity.MainNotification">


    <ImageView
        android:id="@+id/image_product_sheet"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/picture_of_product"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:srcCompat="@drawable/placeholder"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/title_product_sheet"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="TITRE"
        android:textAllCaps="true"
        android:textSize="26sp"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/image_product_sheet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/price_product_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image_product_sheet"
        app:layout_constraintTop_toBottomOf="@+id/title_product_sheet"
        android:text="TITRE"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/price_with_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image_product_sheet"
        app:layout_constraintTop_toBottomOf="@+id/price_product_sheet"
        android:textColor="#ea0f0f"
        android:text="TITRE"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/button_product_sheet"
        android:layout_width="49dp"
        android:layout_height="46dp"
        android:background="#00ffffff"
        android:contentDescription="@string/fav_button"
        android:src="@drawable/star"
        app:layout_constraintLeft_toRightOf="@+id/image_product_sheet"
        app:layout_constraintBottom_toBottomOf="@+id/image_product_sheet"
        app:layout_constraintTop_toBottomOf="@+id/price_with_discount"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/light_description_product_sheet"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_product_sheet"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/description_product_sheet"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/light_description_product_sheet" />
</android.support.constraint.ConstraintLayout>